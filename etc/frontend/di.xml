    <type name="DevStone\ImageProducts\Ui\DataProvider\Product\Form\Modifier\ImageUploadForm">
        <arguments>
            <argument name="uploadPath" xsi:type="string">csproduct/downloadable_file/upload</argument>
        </arguments>
