<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog">
            <group id="keywords" translate="label" sortOrder="80" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Keywords</label>
                <field id="limit_keywords" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Amount Limit Keywords</label>
                    <comment>Enter 0 for unlimited</comment>
                    <validate>integer </validate>
                </field>
                <field id="limit_secondary_keywords" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Amount Limit Secondary Keywords</label>
                    <comment>Enter 0 for unlimited</comment>
                    <validate>integer </validate>
                </field>
                <field id="limit_tertiary_keywords" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Amount Limit Tertiary Keywords</label>
                    <comment>Enter 0 for unlimited</comment>
                    <validate>integer </validate>
                </field>
            </group>
        </section>
    </system>
</config>
